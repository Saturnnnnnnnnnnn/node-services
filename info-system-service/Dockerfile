# Используем официальный образ Node.js версии 16
FROM node

# Установка рабочей директории в /usr/src/app
WORKDIR /usr/src/app

# Копирование package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копирование остальных файлов приложения
COPY . .

# Определение порта, который будет прослушивать ваше приложение
EXPOSE 3002

# Команда для запуска вашего приложения
CMD ["node", "app.js"]
